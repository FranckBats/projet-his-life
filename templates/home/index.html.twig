{% extends 'base.html.twig' %}

{% block title %}His Life
{% endblock %}

{% block body %}

<header>
    <nav class="header">
        <ul class="header-nav">
            <li class="header-nav-item">
                <a href="">Calendrier</a>
            </li>
            <li class="header-nav-item">
                <a href="">Vie scolaire</a>
            </li>
            <li class="header-nav-item">
                <a href="">Santé</a>
            </li>
            <li class="header-nav-item">
                <a href="">Galerie</a>
            </li>
            <li class="header-nav-item">
                <a href="">Annuaire</a>
            </li>
        </ul>
        <div class="header-login">
            <a href="">
            Se Connecter</a>
        </div>
    </nav>
</header>
<main>
    <div class="logo">
        <img src="assets/css/images/HisLifeMobileLogo.png" alt="logo">
    </div>

    <div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <div class="item active">
            <img src="assets/css/images/calendar1.jpg" alt="calendar">
        </div>

        <div class="item">
            <img src="assets/css/images/medical.jpg" alt="medic">
        </div>

        <div class="item">
            <img src="assets/css/images/oldschool.jpg" alt="school">
        </div>
    </div>

<!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<!-- https://www.w3schools.com/bootstrap/bootstrap_carousel.asp (pour la veille technique) -->
</main>
<footer>

    <nav class="footer">
        <ul class="footer-nav">
            <li class="footer-nav-item">
                <a>A propos</a>
