{% block body %}

	<div class="btn-ajout">
		<a href="{{path ('picture_add') }}" class="btn btn-primary">Ajouter une photo</a>
	</div>


	<div class="box">
	{% for picture in pictures %}
		<div class="card">
			<div class="imgBx">
				 <a href="{{ path('picture_read', {'id': picture.id }) }}"><img class="picture" src="{{ picture.file }}" width="200"></a>
			</div>
			<div class="details">
				<h2>{{ picture.title }}<br></h2>
			</div>
		</div>
	{% endfor %}
	</div>   

