{% extends 'basedashboard.html.twig' %}


{% block body %}



<section class="light-content our-team">

{% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
{% endfor %}
		<div class="container">
			<div class="row">
				<div class="col-md-12">
					<div class="section-header">
						<h2 class="section-title">Bulletin de Note</h2>
						<a href="{{ path('grade_add') }}" class="large-button green-color">Ajouter</a>
{% for message in app.flashes('danger') %}
	<div class="alert alert-danger">
		{{ message }}
	</div>
{% endfor %}
					</div>
					<!-- /.section-header -->
				</div>
				<!-- /.col-md-12 -->
			</div>
			<!-- /.row -->
		</div>
		<!-- /.container -->

		{% for grade in grades %}
			<div class="photo-card">

				<div class="photo-background" style="background-image:url('{{asset(grade.file)}}'); "></div>
				<div class="col-md-4">
				<div class="project-info"></br>
				<h3 class="project-title">{{ grade.name }}</h3>
			</br>
			<span class="date">Post√© le:
				{{grade.createdAt|date('d-m-Y')}}</span>
		</br>
	</br>
	<p class="description">Description:
		{{ grade.description }}</p>
				<div class="p-t-10">
					<a href="{{ path('grade_edit', {'id': grade.id}) }}" class="large-button-blanc white-color">
						<button class="large-button-blanc white-color" type="submit">Modifier</button>
					</a>

</div>
				</div>
			</div>

		</div>
	{% endfor %}


</section>

{% endblock %}








