{% extends 'basedashboard.html.twig' %}


{% block body %}

{% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
{% endfor %}

<section class="light-content our-team">


		<div class="container">
			<div class="row">
				<div class="col-md-12">
					<div class="section-header">
						<h2 class="section-title">Bulletin de Note</h2>
						<a href="{{ path('grade_add') }}" class="large-button green-color">Ajouter</a>
					</div>
					<!-- /.section-header -->
				</div>
				<!-- /.col-md-12 -->
			</div>
			<!-- /.row -->
		</div>
		<!-- /.container -->

		{% for grade in grades %}
			<div class="photo-card">

				<div class="photo-background" style="background-image:url('{{asset(grade.file)}}'); "></div>
				<div class="photo-details ">
					<h1 class="title">{{ grade.name }}</h1>
					<span class="photo-author">{{grade.createdAt|date('d-m-Y')}}</span>
					<p class="description-white">{{ grade.description }}</p>
				</br>
				<div class="p-t-10">
					<a href="{{ path('grade_edit', {'id': grade.id}) }}" class="large-button-blanc white-color">
						<button class="large-button-blanc white-color" type="submit">Modifier</button>
					</a>


				</div>
			</div>

		</div>
	{% endfor %}


</section>

{% endblock %}








