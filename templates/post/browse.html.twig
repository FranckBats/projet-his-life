{% extends 'basedashboard.html.twig' %}

{% block title %}Hello ContactController!{% endblock %}

{% block body %}


<div class="">
    <div>
        <h1>Liste des Posts</h1>
    </div>
    <a href="{{path('post_add')}}" class="btn btn-primary">Ajouter un message</a>

    <table class="table table-hover">
     <thead>
        <tr>
            <th scope="col">Titre</th>
            <th scope="col">Message</th>
        </tr>
     </thead>
     <tbody>
        {% for post in posts %}
        <tr>
            <th scope="row">{{post.title}}</th>
            <td>{{post.content}}</td>
            <td><a href="{{path('post_edit', {'id': post.id})}}" class="btn btn-primary ">Modifier</a></td>
        </tr>
        {% endfor %}
     </tbody>
    </table>

    
</div>
{% endblock %}
