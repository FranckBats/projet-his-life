{% extends 'basedashboard.html.twig' %}


{% block body %}

{% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
{% endfor %}

<section class="light-content our-team">


		<div class="container">
			<div class="row">
				<div class="col-md-12">
					<div class="section-header">
						<h2 class="section-title">Mes Messages</h2>
						<a href="{{ path('post_add') }}" class="large-button green-color">Ajouter</a>
					</div>
					<!-- /.section-header -->
				</div>
				<!-- /.col-md-12 -->
			</div>
			<!-- /.row -->
		</div>
		<!-- /.container -->


{% for post in posts %}
			<div class="photo-card">

				<div class="photo-background" style=""></div>
				<div class="col-md-4">
				<div class="project-info"></br>
				<h3 class="project-title">{{ post.title }}</h3>
			</br>
			<span class="date">Post√© le:
				{{post.createdAt|date('d-m-Y')}}</span>
		</br>
	</br>
	<p class="description">
		{{ post.content }}</p>
				<div class="p-t-10">
					<a href="{{ path('post_edit', {'id': post.id}) }}" class="large-button-blanc white-color">
						<button class="large-button-blanc white-color" type="submit">Modifier</button>
					</a>

					</div>


					<!-- /.blog-comments-content -->

				</div>
				<!-- /.blog-post-comments -->


			</div>
			<!-- /.col-md-12 -->
             {% endfor %}
		</div>
		<!-- /.row -->


	{% endblock %}
